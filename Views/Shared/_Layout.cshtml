<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResearchProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResearchProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <Partial Name = "header" />
    <Partial Name ="sidebar"/>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ResearchProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Add these to your _Layout.cshtml or shared layout file -->


    <script>
        var notificationButton = document.getElementById('notification-button');
        var notificationCount = document.getElementById('notification-count');
        var count = 0;

        notificationButton.addEventListener('click', function () {
            // Xử lý khi nút được nhấn
            count++;
            notificationCount.textContent = count;
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .container {
        margin-top: 50px;
        margin-left: 200px;
        height: 100%;
        background-color: rgb(245,255,250);
    }
    .container pb-3{
        height: 100%;
    }
    #notification-button {
        position: relative;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
    }

    #notification-count {
        position: absolute;
        top: 0;
        right: 0;
        background-color: red;
        color: #fff;
        border-radius: 50%;
        padding: 5px 10px;
    }
</style>
