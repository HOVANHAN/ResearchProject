@model ResearchProject.Models.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="upload-body">
    <h4 class="title">Upload Document</h4>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">

            <input asp-for="DocumentName" type="file" name="file" />
            <span asp-validation-for="DocumentName" class="text-danger"></span>
        </div>
        <div class="row-btn">

            <button type="submit" class="btn btn-primary">Upload</button>
            @*   <a asp-action="Index" class="btn btn-secondary">Back to List</a>*@
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .upload-body {
        margin: 150px 0 0 300px;
    }

    .title {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        margin-left: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #555;
    }

    input[type="file"] {
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
    }

    .text-danger {
        color: red;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin-right: 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #ccc;
        color: #333;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    .row-btn {
        display: flex;
    }
</style>