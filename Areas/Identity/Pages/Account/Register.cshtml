@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6">
        <img decoding="async" src="@("~/img/logo.png")" asp-append-version="true" width="500px" />
    </div>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" autocomplete="Full Name" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="border-radius: 40px;">Register</button>
        </form>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>

    .row{
        margin: 150px 0 0 50px;
    }
    .form-floating input.form-control {
        border: 2px solid #007bff; /* Màu và độ dày của viền */
        outline: none; /* Loại bỏ viền khi focus */
        border-radius: 15px;
        margin: 10px;
        padding-right:10px;
    }

        /* Tạo màu chữ đậm cho label khi focus vào input */
        .form-floating input.form-control:focus + label {
            font-weight: bold;
            
        }
        label{
            margin-left: 10px;
        }
    button{
        border-radius: 40px;
        margin:10px 0 0 10px;
    }

</style>