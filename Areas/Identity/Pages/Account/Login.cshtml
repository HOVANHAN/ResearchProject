@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6">
        <img decoding="async" src="@("~/img/logo.png")" asp-append-version="true" width="500px" />
    </div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="border-radius: 40px;">Log in</button>
                </div>
                <div>
                    <span>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </span>
                    <span>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </span>
                    
                </div>
            </form>
        </section>
    </div>
</div>
<style>
    .row {
        margin: 200px 0 0 50px;
    }
        .row span{
            margin-top:25px;
        }
        
        .row a{
            margin: 25px 5px 0 15px;
            text-decoration: none;
        }

    .form-floating input.form-control {
        border: 2px solid #007bff; /* Màu và độ dày của viền */
        outline: none; /* Loại bỏ viền khi focus */
        border-radius: 15px;
        margin: 10px;
        padding-right: 10px;
    }

        /* Tạo màu chữ đậm cho label khi focus vào input */
        .form-floating input.form-control:focus + label {
            font-weight: bold;
        }

    label {
        margin-left: 10px;
    }

    button {
        border-radius: 40px;
        margin: 10px 0 10px 10px;
    }
    
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
